@model IEnumerable<CorridaDePesso.Models.ViewModel.CorredorViewModel>

@{
    ViewBag.Title = "Corredor de Peso";
}

<br />
<div class="row" style="height:100%">
    <div class="row col-md-3">
        <div class="corredores">
            @foreach (var item in Model)
            {
                <div class="corredor">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-4">
                                <img src="@item.urlImagemCorredor" alt="140X140" class="img-circle" style="width:80px">
                            </div>
                            <div class="col-md-8">
                                <h4 style="margin-top:0; margin-bottom:0"> <a href="#" id="@item.Id" value="@item.Corrida.Id" class="LinkCorredor">@item.Nome  </a></h4>
                                <strong>Perdeu: @item.PesoPerdido</strong><br />
                                <strong>Falta Perder : @item.FaltaPerder</strong><br />
                                Peso Inicial: @item.PesoIcinial <br />
                                Meta: @item.PesoObjetivo <br />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="GraficoDePeso" class="col-md-9">
    </div>
</div>
@Html.HiddenFor(model => model.FirstOrDefault().Corrida.Id)
<br />
<div class="row">
</div>
<div class="row">
    <div id="InfoCorredor" class="col-lg-8">
    </div>
</div>
<div class="row">
    <div class="row col-md-4">
    </div>
    <div id="pesagem" class="col-lg-8">
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/Grafico")
}
